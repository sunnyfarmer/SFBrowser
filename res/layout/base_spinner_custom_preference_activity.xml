<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dialog_title_background"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical" >
    <Spinner android:id="@+id/BaseSpinnerCustomPreferenceSpinner"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent" />
    
    <EditText android:id="@+id/BaseSpinnerCustomPreferenceEditText"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent" />
    
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">
        <Button android:id="@+id/BaseSpinnerCustomPreferenceOk"
            android:text="@string/Commons.Ok"
            android:layout_weight="0.5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <Button android:id="@+id/BaseSpinnerCustomPreferenceCancel"
            android:text="@string/Commons.Cancel"
            android:layout_weight="0.5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
